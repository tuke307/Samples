<UserControl x:Class="MvvmCross.WPF.View1.NestedView"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmCross.WPF.View1"
             xmlns:vm="clr-namespace:MvvmCross.WPF.View1.ViewModels"
             mc:Ignorable="d"
             DataContext="{Binding vm:NestedViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Content>
        <StackPanel>
            <Label Content="View Content" />
            <local:NestedNestedView />
        </StackPanel>
    </UserControl.Content>
</UserControl>